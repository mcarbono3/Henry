# Configuración de la aplicación Flask
SECRET_KEY=henry-secret-key-2025-change-in-production
JWT_SECRET_KEY=jwt-secret-string-change-in-production

# Base de datos
DATABASE_URL=sqlite:///henry.db
# Para PostgreSQL: postgresql://username:password@localhost/henry_db
# Para MySQL: mysql://username:password@localhost/henry_db

# Configuración de desarrollo
FLASK_ENV=development
FLASK_DEBUG=True

# APIs externas (opcional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800  # 50MB

# Configuración de correo (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5174

# Configuración de JWT
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 horas en segundos

